<h1>Listing Authors</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= link_to author.homepage, author.homepage %></td>
      <td><%= author_path(author) %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New', new_author_path %>